---
import type { Link } from "@/.storyblok/types/285719928053161/storyblok-components";

interface Props {
  blok: Link;
}

const { blok } = Astro.props;
---

<a
  href={blok.url.url}
  rel={blok.url.target === "_blank" ? "noopener noreferrer" : undefined}
  target={blok.url.target}
  class="px-3 py-2 text-sm font-medium text-gray-600 transition-colors hover:text-gray-900"
  >{blok.text}</a
>
