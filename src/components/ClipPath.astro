---
import { storyblokEditable, renderRichText } from "@storyblok/astro";
import type { ClipPath } from "@/.storyblok/types/285719928053161/storyblok-components";

interface Props {
  blok: ClipPath;
}

const { blok } = Astro.props;

const content = renderRichText(blok.copy);
---

<section {...storyblokEditable(blok)} class="container mx-auto px-4">
  <div class="relative h-80 w-full overflow-hidden">
    <div class="bg-alabaster animate-morph-shape absolute inset-0"></div>
    <div
      class="text-mine-shaft font-primary relative z-10 flex h-full items-center justify-center px-4 py-8 text-center text-4xl leading-normal font-bold"
    >
      <Fragment set:html={content} />
    </div>
  </div>
</section>
