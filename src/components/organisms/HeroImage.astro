---
import { storyblokEditable, type SbBlokData } from "@storyblok/astro";
import StoryblokComponent from "@storyblok/astro/StoryblokComponent.astro";
import type { HeroImage } from "@/.storyblok/types/285719928053161/storyblok-components";

export interface Props {
  blok: HeroImage;
}

const { blok } = Astro.props;
const { title, description, image, links = [] } = blok;
---

<section
  class="bg-base-100 py-16 sm:py-24"
  {...storyblokEditable(blok as SbBlokData)}
>
  <div class="container mx-auto max-w-5xl px-4">
    <div class="hero">
      <div class="hero-content flex-col gap-8 lg:flex-row-reverse">
        {
          image?.filename && (
            <img
              src={image.filename}
              alt={image.alt || title || "Hero image"}
              class="max-w-sm rounded-lg shadow-2xl"
            />
          )
        }
        <div>
          {title && <h1 class="mb-6 text-4xl font-bold sm:text-5xl">{title}</h1>}
          {
            description && (
              <p class="text-base-content/80 mb-8 text-lg leading-relaxed sm:text-xl">
                {description}
              </p>
            )
          }
          {
            links.length > 0 && (
              <div class="flex flex-wrap gap-4">
                {links.map((linkBlok) => (
                  <StoryblokComponent blok={linkBlok as SbBlokData} />
                ))}
              </div>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>
