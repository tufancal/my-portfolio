---
import {
  storyblokEditable,
  type SbBlokData,
  renderRichText,
  type StoryblokRichTextNode,
} from "@storyblok/astro";
import type { CareerItem } from "@/.storyblok/types/285719928053161/storyblok-components";

export interface Props {
  blok: CareerItem;
}

const { blok } = Astro.props;
const { period, title, company, description } = blok;
---

<li {...storyblokEditable(blok as SbBlokData)}>
  <hr />
  <div class="timeline-start timeline-box text-sm lg:text-base">
    {period && <div class="badge badge-primary badge-sm lg:badge-md mb-2">{period}</div>}
    {title && <h3 class="text-base lg:text-lg font-bold wrap-break-word">{title}</h3>}
    {company && <p class="text-base-content/70 text-xs lg:text-sm wrap-break-word">{company}</p>}
  </div>
  <div class="timeline-middle shrink-0">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 20 20"
      fill="currentColor"
      class="text-primary h-4 w-4 lg:h-5 lg:w-5"
    >
      <path
        fill-rule="evenodd"
        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 10-1.06 1.061l2.5 2.5a.75.75 0 001.137-.089l4-5.5z"
        clip-rule="evenodd"></path>
    </svg>
  </div>
  <div class="timeline-end timeline-box text-sm lg:text-base">
    {
      description && (
        <div class="prose prose-sm lg:prose-base max-w-none">
          <Fragment
            set:html={renderRichText(description as StoryblokRichTextNode)}
          />
        </div>
      )
    }
  </div>
  <hr />
</li>
