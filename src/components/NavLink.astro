---
import type { NavLink } from "@/.storyblok/types/285719928053161/storyblok-components";

interface Props {
  blok: NavLink;
}

const { blok } = Astro.props;

const fontSize = blok.isSmall ? "text-sm lg:text-base" : "text-4xl lg:text-2xl";
---

<a
  class={`font-secondary text-mine-shaft ${fontSize} font-bold uppercase`}
  href={blok.url.url}>{blok.text}</a
>
